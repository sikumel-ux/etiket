<script>
const API_URL = "https://script.google.com/macros/s/AKfycbyZMsfMjMRwqI0r1cu9DMO4yBjMUP53L4mIzBUrxkJj60FBN6iUHYlEntmXKErHTEmS/exec";

/* =========================
   FORMAT TANGGAL
   yyyy-mm-dd → dd-mm-yyyy
========================= */
function formatTanggal(tgl){
  if(!tgl) return "-";
  const p = tgl.split("-");
  if(p.length !== 3) return tgl;
  return `${p[2]}-${p[1]}-${p[0]}`;
}

fetch(API_URL + "?last=1")
  .then(res => res.json())
  .then(data => {

    if (!data || data.error) {
      document.body.innerHTML = "<h3 style='text-align:center'>Etiket tidak ditemukan</h3>";
      return;
    }

    document.getElementById("kodeBooking").innerText = data.kode_booking;
    document.getElementById("nama").innerText = data.nama;
    document.getElementById("no_hp").innerText = data.no_hp;
    document.getElementById("armada").innerText = data.armada;
    document.getElementById("tujuan").innerText = data.tujuan;
    document.getElementById("no_kursi").innerText = data.no_kursi;

    // ✅ TANGGAL STRING (AMAN)
    document.getElementById("tgl").innerText = formatTanggal(data.tanggal);

    // ✅ JAM STRING (ANTI 1899)
    document.getElementById("jam").innerText = data.jam;

    document.getElementById("harga").innerText =
      Number(data.harga).toLocaleString("id-ID");

    document.getElementById("barcodeImg").src =
      "https://barcode.tec-it.com/barcode.ashx?data=" +
      encodeURIComponent(data.kode_booking) +
      "&code=Code128";
  })
  .catch(err => {
    console.error(err);
    document.body.innerHTML = "<h3 style='text-align:center'>Gagal memuat etiket</h3>";
  });
</script>


